<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".NoteDetailsActivity">

    <ImageButton
        android:id="@+id/backImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_back" />

    <TextView
        android:id="@+id/noteCodeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="NoteCode"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/backImageButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/undoImageButton"
        android:layout_width="23dp"
        android:layout_height="21dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="16dp"
        android:background="#00FFFFFF"
        android:rotation="180"
        app:layout_constraintStart_toEndOf="@+id/noteCodeTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/undo" />

    <ImageButton
        android:id="@+id/redoImageButton"
        android:layout_width="23dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="#00FFFFFF"
        android:rotation="180"
        app:layout_constraintStart_toEndOf="@+id/undoImageButton"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/redo" />

    <ImageButton
        android:id="@+id/checkImageButton"
        android:layout_width="23dp"
        android:layout_height="21dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:background="#00FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/redoImageButton"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/check" />
</androidx.constraintlayout.widget.ConstraintLayout>